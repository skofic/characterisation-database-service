{
	"name": "CharacterisationService",
	"version": "1.0.0",
	"description": "Characterisation data service",
	"engines": {
		"arangodb": "^3.0.0"
	},

	"author": "Milko Skofic",
	"license": "Apache 2",
	"main": "main.js",

	"scripts": {
		"setup": "scripts/setup.js",
		"teardown": "scripts/teardown.js"
	},
	"tests": "test/**/*.js",

	"$schema": "http://json.schemastore.org/foxx-manifest",

    "configuration": {
		"term_view_name": {
			"description": "Terms view name.",
			"default": "VIEW_TERM",
			"type": "string"
		},
		"data_coll_name": {
			"description": "Data collection name.",
			"default": "data",
			"type": "string"
		},
		"data_view_name": {
			"description": "Data view name.",
			"default": "VIEW_DATA",
			"type": "string"
		},
		"dataset_coll_name": {
			"description": "Dataset collection name.",
			"default": "dataset",
			"type": "string"
		},
		"dataset_view_name": {
			"description": "Dataset view name.",
			"default": "VIEW_DATASET",
			"type": "string"
		}
    }
}
